#!/usr/bin/env node

'use strict';

const program = require('../ts_build/program');
const { Wallet } = require('../ts_build/wallet');
const promptly = require('promptly');

program
  .version(require('../package.json').version)
  .option('--name <name>', 'REQUIRED - Wallet Name')
  .option('--chain <chain>', 'REQUIRED - Chain (BTC/BCH/ETH, etc)')
  .option(
    '--network <network>',
    'REQUIRED - Network (livenet/testnet/regtest, etc)'
  )
  .option('--baseUrl [host]', 'optional - Specify custom Bitcore API URL')
  .option('--path [path]', 'optional - Custom wallet storage path')
  .option('--authKey [authKey]', 'optional - Pass in custom authKey for requests')
  .option('--dbName [dbName]', 'optional - name of the database to use (Mongo or Level)')
  .option('--xPubKey [xPubKey]', 'optional - Pass in custom pubKey for address derivation')
  .parse(process.argv);

const main = async () => {
  const { name, baseUrl, chain, network, path, dbName, authKey, xPubKey } = program;
  try {
    const password = await promptly.password('Wallet Password:');
    await Wallet.create({
      name,
      baseUrl,
      chain,
      network,
      path,
      password,
      dbName,
      lite: true,
      authKey,
      xPubKey,
    });
    console.log('Wallet created!');
  } catch (e) {
    console.error(e);
  }
};

main();
