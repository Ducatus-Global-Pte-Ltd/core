#!/usr/bin/env node
'use strict';

const Storage = require('../lib/storage');
const program = require('../lib/program');

program
  .version(require('../package.json').version)
  .option('--path [path]', 'optional - Where wallets are stored')
  .parse(process.argv);

const main = async () => {
  const { path } = program;
  let storage = new Storage({createIfMissing: false, errorIfExists: false, path});
  let walletStream = storage.listWallets();
  walletStream.on('data', (wallet) => {
    const { name, chain, network } = JSON.parse(wallet.toString());
    console.log({name, chain, network});
  });
};

main();
