#!/usr/bin/env node

const program = require('commander');
const Wallet = require('../lib/wallet');
const promptly = require('promptly');

program
  .version(require('../package.json').version)
  .option('--path <path>', 'REQUIRED - Wallet Path')
  .parse(process.argv);

if (!program.path) {
  program.help();
}

const main = async () => {
  const { path } = program;
  try {
    const password = await promptly.password('Wallet Password:');
    if (!password) {
      throw new Error(
        'No password provided. Keys can\'t be imported without unlocking the wallet'
      );
    }
    let wallet = await Wallet.loadWallet({ path });
    if (!wallet) {
      throw new Error(
        'No wallet found'
      );
    }
    await wallet.unlock(password);
    console.log(wallet);
  } catch (e) {
    console.log(e);
    console.error('Unable to decrypt wallet');
  }
};

main();
