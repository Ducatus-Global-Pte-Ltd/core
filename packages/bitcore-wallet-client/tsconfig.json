{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "es2017"
    ],
    "noImplicitAny": false,
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es5",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "./src/*"
      ]
    },
    "outDir": "./built",
    "sourceMap": true,
    "allowJs": true
  },
  "include": [
    "./src/**/*.ts",
    "./test/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}